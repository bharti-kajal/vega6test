<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-6 col-xl-6 col-xxl-6">
    <div class="card border-0 shadow-sm rounded-4">
      <div class="card-body p-3 p-md-4 p-xl-5">
        <div class="row">
          <div class="col-12">
            <div class="mb-3">
              <h2 class="h3 text-center" style="color: #600560;">Login</h2>
            
               <!-- Display Success Message -->
               <% if (flash.success && flash.success.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                  <%= flash.success %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
               <% } %>

              <!-- Display Error Message -->
              <% if (flash.error && flash.error.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <%= flash.error %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              <% } %>
              
            </div>
          </div>
        </div>
          <div class="row gy-3 overflow-hidden">
            <form action="/login"  method="post">
               
                  <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="password">
                  </div>
               
                  <div class="d-grid mt-4">
                      <button class="btn bsb-btn-sm" type="submit" style="background-color: #885df1;color:white">Login</button>
                  </div>
                </form>
          </div>
        <div class="row">
          <div class="col-12">
            <hr class="mt-2 mb-2 border-secondary-subtle">
            <p class="m-0 text-secondary text-center">Don't have an account? <a href="/signup" class="link-primary text-decoration-none">Sign up</a></p>
          </div>
        </div>
    
      </div>
    </div>
  </div>
</div>